---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog', ({ data }) => {
	return data.draft !== true;
})).sort(
	(a, b) => {
		const aDate = a.data.pubDate || a.data.date || new Date(0);
		const bDate = b.data.pubDate || b.data.date || new Date(0);
		return bDate.valueOf() - aDate.valueOf();
	},
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Blog | TheBigLaskowski" description="Latest posts about AI art, development tutorials, and tech exploration" />
	</head>
	<body>
		<Header />
		<main id="main-content">
			<div class="container">
				<section class="blog-header">
					<h1 class="gradient-text">Blog Posts</h1>
					<p>Exploring AI art, development techniques, and creative technology through hands-on experimentation.</p>
				</section>

				<section class="posts-grid">
					{posts.map((post, index) => (
						<article class={`post-card card ${index === 0 ? 'featured' : ''}`}>
							<a href={`/blog/${post.id}/`} class="post-link">
								{post.data.heroImage && (
									<div class="post-image">
										<img
											src={post.data.heroImage}
											alt={post.data.title}
											loading={index < 2 ? "eager" : "lazy"}
										/>
									</div>
								)}
								<div class="post-content">
									<div class="post-meta">
										<time class="post-date">
											<FormattedDate date={post.data.pubDate || post.data.date || new Date()} />
										</time>
									</div>
									<h2 class="post-title">{post.data.title}</h2>
									{post.data.description && (
										<p class="post-description">{post.data.description}</p>
									)}
								</div>
							</a>
						</article>
					))}
				</section>
			</div>
		</main>
		<Footer />

		<style>
			.blog-header {
				text-align: center;
				margin: 3rem 0;
			}

			.blog-header h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
				font-weight: 700;
			}

			.blog-header p {
				font-size: 1.25rem;
				color: var(--text-secondary);
				max-width: 600px;
				margin: 0 auto;
			}

			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 2rem;
				margin-top: 3rem;
			}

			.post-card {
				transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
				overflow: hidden;
				padding: 0;
			}

			.post-card.featured {
				grid-column: 1 / -1;
				max-width: 800px;
				margin: 0 auto;
			}

			.post-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 30px rgba(0, 212, 255, 0.15);
				border-color: var(--border-glow);
			}

			.post-link {
				text-decoration: none;
				color: inherit;
				display: block;
				height: 100%;
			}

			.post-image {
				width: 100%;
				height: 200px;
				overflow: hidden;
				position: relative;
			}

			.featured .post-image {
				height: 300px;
			}

			.post-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.3s ease;
				border-radius: 0;
			}

			.post-card:hover .post-image img {
				transform: scale(1.05);
			}

			.post-content {
				padding: 1.5rem;
			}

			.post-meta {
				margin-bottom: 0.5rem;
			}

			.post-date {
				font-size: 0.9rem;
				color: var(--text-muted);
				font-weight: 600;
			}

			.post-title {
				font-size: 1.5rem;
				font-weight: 600;
				color: var(--text-primary);
				margin: 0.5rem 0;
				line-height: 1.3;
				transition: color 0.2s ease;
			}

			.featured .post-title {
				font-size: 2rem;
			}

			.post-description {
				color: var(--text-secondary);
				font-size: 1rem;
				line-height: 1.5;
				margin: 1rem 0 0 0;
				display: -webkit-box;
				-webkit-line-clamp: 3;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}

			.post-link:hover {
				text-decoration: none;
			}

			.post-link:hover .post-title {
				color: var(--accent-blue);
			}

			@media (max-width: 768px) {
				.blog-header h1 {
					font-size: 2.5rem;
				}

				.blog-header p {
					font-size: 1.125rem;
				}

				.posts-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}

				.post-card.featured {
					grid-column: 1;
				}

				.post-image {
					height: 180px;
				}

				.featured .post-image {
					height: 220px;
				}

				.featured .post-title {
					font-size: 1.75rem;
				}
			}
		</style>
	</body>
</html>
